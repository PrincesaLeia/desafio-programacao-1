<p id="notice"><%= notice %></p>

<h1>Lista de Vendas</h1>

<table>
  <thead>
    <tr>
      <th>Nome comprador</th>
      <th>Descricao item</th>
      <th>Preco item</th>
      <th>Qtde compra</th>
      <th>Endereco vendedor</th>
      <th>Nome vendedor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendas.each do |venda| %>
      <tr>
        <td><%= venda.nome_comprador %></td>
        <td><%= venda.descricao_item %></td>
        <td><%= venda.preco_item %></td>
        <td><%= venda.qtde_compra %></td>
        <td><%= venda.endereco_vendedor %></td>
        <td><%= venda.nome_vendedor %></td>
        <td><%= link_to 'Ver', venda %></td>
        <td><%= link_to 'Editar', edit_venda_path(venda) %></td>
        <td><%= link_to 'Deletar', venda, method: :delete, data: { confirm: 'Voce tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

